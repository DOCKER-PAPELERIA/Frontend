# Activar el soporte de URLs amigables
RewriteEngine On

# Redirigir URLs sin .html a sus respectivos archivos HTML
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Configurar el tipo de archivo para las p√°ginas de error
ErrorDocument 404 /errores/404.html
